<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shardingproxy.demo.demo.dao.TAddressDao">


    <!--查询单个-->
    <select id="queryById" resultType="com.shardingproxy.demo.demo.entity.TAddress">
        select address_id,
               user_id,
               address
        from t_address
        where address_id = #{addressId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultType="com.shardingproxy.demo.demo.entity.TAddress">
        select address_id,
               user_id,
               address
        from t_address limit #{offset}, #{limit}
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="addressId" useGeneratedKeys="true">
        insert into t_address(address_id,user_id, address)
        values (#{addressId},#{userId}, #{address})
    </insert>

    <insert id="insertBatch" keyProperty="addressId" useGeneratedKeys="true">
        insert into t_address(user_id, address)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.address})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="addressId" useGeneratedKeys="true">
        insert into t_address(user_id, address)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.address})
        </foreach>
        on duplicate key update
        user_id = values(user_id) , address = values(address)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_address
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
        </set>
        where address_id = #{addressId}
    </update>

</mapper>

